{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "ESNext", //Define la version de js
    "module": "commonjs", //El modulo ah usar (ECMAScript), permite importar y exportar
    "moduleResolution": "node", //Indica el compilador a usar 
    "strict": false, //Activa verificaciones estritas del compilador y encontrar los errores
    "esModuleInterop": true, //Permite importar modulos CommonJS
    "declaration": true, //Genera archivos .d.ts
    "outDir": "./dist", //Carpeta donde se guarda el codigo js generado
    "rootDir": "./src",  //Carpeta raiz 
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"], //Especifica los archivos y carpetas a incluir para la compilacion
  "exclude": ["node_modules"] //Especifica los archivos y carpetas a excluir para la compilacion
}
